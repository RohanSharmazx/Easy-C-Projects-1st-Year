#include <stdio.h>

void pointswap(int *ptr1, int *ptr2) {
    int temp = *ptr1;  // Store first value in temp
    *ptr1 = *ptr2;     // Assign second value to first
    *ptr2 = temp;      // Assign temp (original first value) to second
}

int main() {
    int n1, n2;

    printf("Enter 2 numbers: ");
    scanf("%d%d", &n1, &n2);

    printf("Before Swapping: first = %d, second = %d\n", n1, n2);

    pointswap(&n1, &n2);  // Correctly swapping numbers

    printf("After Swapping: first = %d, second = %d\n", n1, n2);

    return 0;
}